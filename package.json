{
  "name": "page-modifier",
  "version": "1.0.0",
  "description": "AIを活用してWebページの機能を柔軟に拡張できるChrome Extension",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development && npm run copy:manifest",
    "build": "tsc && vite build && npm run copy:manifest",
    "copy:manifest": "cp manifest.json dist/",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/chrome": "^0.0.270",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "jsdom": "^27.1.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "web-modification",
    "claude"
  ],
  "author": "",
  "license": "MIT"
}
